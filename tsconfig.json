{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Paths adaptados a tu estructura actual */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@common/*": ["common/*"],
      "@ui/*": ["common/ui/*"],
      "@hooks/*": ["common/hooks/*"],
      "@lib/*": ["common/lib/*"],
      "@config/*": ["common/config/*"],
      "@constants/*": ["common/constants/*"],
      "@icons/*": ["common/icons/*"],
      "@types/*": ["common/types/*"],
      "@customer/*": ["modules/customer-record/*"],
      "@legal/*": ["modules/legal-record/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["src"],
  "references": []
}
